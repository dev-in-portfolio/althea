      {% for tag in tags %}<span>{{ tag }}</span>{% endfor %}
    </div>
    <h4>Risk</h4>
    <span class="pill">{{ risk }}</span>
  </aside>
  <div class="content">
    {{ content | safe }}
  </div>
</article>
