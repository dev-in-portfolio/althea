---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const entries = (await getCollection("paradoxes")).map((entry) => ({
  slug: entry.data.slug ?? entry.slug,
  title: entry.data.title,
  summary: entry.data.summary,
  type: entry.data.type,
  tags: entry.data.tags
}));
---
<BaseLayout title="Paradox Vault â€” Bookmarks">
  <section class="panel">
    <h1>Bookmarks</h1>
    <p>Your saved entries appear here.</p>
    <div class="grid" data-bookmarks-list></div>
    <div class="empty-state" data-bookmarks-empty hidden>No bookmarks yet. Save entries from the Vault.</div>
  </section>
  <script is:inline define:vars={{ entries }}>
    window.__ENTRIES__ = entries;
  </script>
</BaseLayout>
