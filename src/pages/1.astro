---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Layout 1 Preview">
  <section class="panel layout-preview">
    <h1>Layout #1 — Food‑Truck Menu Board</h1>
    <p class="muted">Hero banner + left specials column + right order window.</p>
    <div class="layout-sim">
      <div class="sim-banner">Menu Board</div>
      <div class="sim-columns">
        <div class="sim-col sim-specials">
          <div class="sim-chip">Specials</div>
          <div class="sim-line"></div>
          <div class="sim-line"></div>
          <div class="sim-line"></div>
        </div>
        <div class="sim-col sim-window">
          <div class="sim-chip">Order Window</div>
          <div class="sim-box"></div>
          <div class="sim-box"></div>
          <div class="sim-box"></div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
