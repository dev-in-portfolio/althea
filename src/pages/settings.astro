---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Wayfinder â€” Settings">
  <section class="section-card">
    <h1>Settings</h1>
    <p>Adjust the reading environment for this device.</p>
    <form data-settings-form class="grid">
      <label>
        Font size
        <input name="fontSize" type="range" min="14" max="22" step="1" />
      </label>
      <label>
        Contrast
        <select name="contrast">
          <option value="normal">Normal</option>
          <option value="high">High</option>
        </select>
      </label>
      <label>
        Reduced motion
        <select name="reducedMotion">
          <option value="false">Off</option>
          <option value="true">On</option>
        </select>
      </label>
      <label>
        Reading streak
        <select name="streakEnabled">
          <option value="true">Enabled</option>
          <option value="false">Disabled</option>
        </select>
      </label>
      <label>
        Weekly goal (walks)
        <input name="weeklyGoal" type="range" min="1" max="7" step="1" />
      </label>
      <label>
        Walk mode duration (minutes)
        <input name="walkMinutes" type="range" min="3" max="10" step="1" />
      </label>
      <label>
        Pause cards
        <select name="pauseCards">
          <option value="true">On</option>
          <option value="false">Off</option>
        </select>
      </label>
      <label>
        Ritual line
        <input name="ritualLine" type="text" placeholder="A short line to open your walk." />
      </label>
      <label>
        Session goal (walks per week)
        <input name="sessionGoal" type="range" min="1" max="10" step="1" />
      </label>
      <label>
        Ambient sound
        <select name="ambientOn">
          <option value="off">Off</option>
          <option value="on">On</option>
        </select>
      </label>
      <label>
        Ambient volume
        <input name="ambientVolume" type="range" min="0" max="100" step="5" />
      </label>
    </form>
  </section>
</BaseLayout>
