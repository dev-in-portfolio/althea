---
import Base from '../../layouts/Base.astro';
import { getWings } from '../../lib/data';
const wings = getWings();
---
<Base title="Wings">
  <h1>Wings</h1>
  {wings.length === 0 ? (
    <div class="notice">No wings loaded yet.</div>
  ) : (
    <div class="grid">
      {wings.map((w) => (
        <a class="card" href={`/wings/${w.slug}`}>
          <strong>{w.name}</strong>
          <div class="muted">{w.slug}</div>
        </a>
      ))}
    </div>
  )}
</Base>
