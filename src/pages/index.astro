---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Interactive Terms Translator">
  <section class="panel translator-panel">
    <div class="panel-strip">Translator Window</div>
    <div class="translator-grid">
      <div class="translator-inputs">
        <label class="field">
          Direction
          <select data-dir>
            <option value="rest-to-tech">Restaurant → Tech</option>
            <option value="tech-to-rest">Tech → Restaurant</option>
          </select>
        </label>
        <label class="field">
          Category
          <select data-category>
            <option value="all">All Categories</option>
          </select>
        </label>
        <label class="field">
          Subcategory
          <select data-subcategory>
            <option value="all">All Subcategories</option>
          </select>
        </label>
        <label class="field">
          Term
          <select data-term>
            <option value="">Select a term…</option>
          </select>
        </label>
        <div class="status-line" data-term-count>Available terms: 0</div>
        <label class="field">
          Quick Jump
          <input type="search" placeholder="Jump to term…" data-jump />
        </label>
        <div class="translator-actions">
          <button class="btn-primary" data-fire>Fire</button>
          <button class="btn-ghost" data-clear>86</button>
        </div>
        <div class="status-bar" aria-hidden="true"></div>
        <div class="status-line" data-status>Walking In…</div>
      </div>
    </div>
  </section>

  <section class="panel rush-panel">
      <div class="panel-strip">Rush Mode</div>
      <div class="rush-rail">
      <button class="toggle" data-toggle="Hot">Hot</button>
      <button class="toggle" data-toggle="On The Fly">On The Fly</button>
      <button class="toggle" data-toggle="All Day">All Day</button>
      <button class="toggle" data-toggle="86 Mode">86 Mode</button>
      </div>
    </section>

  <section class="panel-grid">
    <section class="panel results-panel">
      <div class="panel-strip">Results</div>
      <div class="results-body" data-result>
        <div class="muted">Type to see matches.</div>
      </div>
      <div class="status-line result-brief" data-brief></div>
    </section>

    <section class="panel signals-panel">
      <div class="panel-strip">Signals</div>
      <ul class="signals-list">
        <li class="signal info" data-signal="Incident">Incident</li>
        <li class="signal" data-signal="Outage">Outage</li>
        <li class="signal" data-signal="Escalation">Escalation</li>
        <li class="signal critical" data-signal="Critical">Critical</li>
        <li class="signal" data-signal="Latency">Latency</li>
        <li class="signal" data-signal="Degraded">Degraded</li>
        <li class="signal" data-signal="Quality">Quality Drift</li>
        <li class="signal" data-signal="Capacity">Capacity</li>
        <li class="signal" data-signal="Safety">Safety Hold</li>
        <li class="signal" data-signal="Stockout">Stockout</li>
      </ul>
    </section>
  </section>
</BaseLayout>
