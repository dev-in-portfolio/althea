---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Contribute">
  <section class="panel">
    <div class="panel-strip">Contribute</div>
    <h1 class="page-title">Contribute a Term</h1>
    <p class="muted">Add a custom term. If the backend is unavailable, it is stored locally and marked as local-only.</p>
    <form class="form-grid" data-contribute-form>
      <label class="field">
        Term
        <input type="text" name="term" required />
      </label>
      <label class="field">
        Slug
        <input type="text" name="slug" required />
      </label>
      <label class="field">
        Category
        <select name="category" required>
          <option value="BOH">BOH</option>
          <option value="FOH">FOH</option>
          <option value="MANAGEMENT">MANAGEMENT</option>
          <option value="INVENTORY">INVENTORY</option>
          <option value="SERVICE">SERVICE</option>
          <option value="GENERAL">GENERAL</option>
        </select>
      </label>
      <label class="field">
        Tech Equivalents (comma separated)
        <input type="text" name="techEquivalent" required />
      </label>
      <label class="field">
        Restaurant Definition
        <textarea name="definitionRestaurant" required></textarea>
      </label>
      <label class="field">
        Tech Definition
        <textarea name="definitionTech" required></textarea>
      </label>
      <label class="field">
        Restaurant Examples (comma separated)
        <input type="text" name="examplesRestaurant" required />
      </label>
      <label class="field">
        Tech Examples (comma separated)
        <input type="text" name="examplesTech" required />
      </label>
      <label class="field">
        Tags (comma separated)
        <input type="text" name="tags" />
      </label>
      <label class="field">
        Related Slugs (comma separated)
        <input type="text" name="related" />
      </label>
      <div class="controls">
        <button type="submit" class="btn-primary">Fire</button>
        <button type="reset" class="btn-ghost">86</button>
      </div>
    </form>
    <div class="status-line" data-contribute-status hidden></div>
  </section>
</BaseLayout>
