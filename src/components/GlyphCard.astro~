---
const { glyph } = Astro.props;

const id = glyph?.id ?? "";
const code = glyph?.code ?? "";
const name = glyph?.name ?? "";
const category = glyph?.category ?? "";
const meaning = glyph?.meaning ?? "";
---

<article class="card" data-id={id} data-name={name} data-category={category} data-meaning={meaning}>
  <div class="top">
    <div class="code" aria-hidden="true">{code}</div>
    <div class="meta">
      <div class="id">{id}</div>
      <div class="name">{name}</div>
      <div class="category">{category}</div>
    </div>
  </div>

  {meaning && <div class="meaning">{meaning}</div>}

  <button class="btn" type="button" data-action="open" aria-label={`Open ${id} ${name}`}>
    Open
  </button>
</article>

